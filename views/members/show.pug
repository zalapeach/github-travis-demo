extends ../layout

block content
  .container
    .row
      .col-xl-12.col-md-12.mb-4
        .card.mb-4.shadow-sm
          .card-body
            h3.card-title.pricing-card-title Detailed info
            .row
              .col-xl-9.col-md-8.mb-4
                h3 Name
                p= name
                h3 Organization
                p= org
                h3 Github account
                p
                  a(href='https://github.com/' + github)= github
              .col-xl-3.col-md-4.mb-4
                h3 Photo
                img(src=photo, alt=name, width=100, height=100)
